{
  "name": "@compotes/vue",
  "type": "module",
  "version": "0.10.1",
  "description": "Components library focused on accessibility/customization",
  "author": "Applelo",
  "license": "MIT",
  "homepage": "https://compotes.dev/",
  "repository": {
    "type": "git",
    "url": "https://github.com/Applelo/compotes"
  },
  "bugs": "https://github.com/Applelo/compotes/issues",
  "keywords": [
    "components",
    "accessible",
    "accessibility",
    "customize",
    "component",
    "vanilla",
    "typescript",
    "typings",
    "vue",
    "composables"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/compotes.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/compotes.umd.js"
      }
    }
  },
  "main": "./dist/compotes.umd.js",
  "module": "./dist/compotes.js",
  "types": "./dist/compotes.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown",
    "test:vitest": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "vue": ">=3.0.0"
  },
  "dependencies": {
    "compotes": "workspace:*"
  },
  "devDependencies": {
    "@vitest/browser-playwright": "catalog:",
    "typescript": "catalog:",
    "unplugin-vue": "catalog:",
    "vitest": "catalog:",
    "vue": "catalog:",
    "vue-tsc": "catalog:"
  },
  "publishConfig": {
    "access": "public"
  }
}
