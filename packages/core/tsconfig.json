{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ES2016", "dom"],
    "useDefineForClassFields": true,
    "baseUrl": "src",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@src/*": ["./*"],
      "@css/*": ["./assets/css/*"]
    },
    "types": ["vite/client"],
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "test/**/*.ts"
  ]
}
