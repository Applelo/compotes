{
  "name": "@compotes/core",
  "type": "module",
  "packageManager": "pnpm@7.9.0",
  "version": "1.0.0",
  "description": "Components library focused on accessibility/customization",
  "bugs": "https://github.com/Applelo/compotes/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/Applelo/compotes"
  },
  "engines": {
    "node": ">=14"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/compotes.umd.cjs",
  "module": "./dist/compotes.js",
  "exports": {
    ".": {
      "import": "./dist/compotes.js",
      "require": "./dist/compotes.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && vue-tsc --emitDeclarationOnly"
  },
  "keywords": [
    "components",
    "accessible",
    "accessibility",
    "customize",
    "component",
    "vanilla",
    "typescript",
    "typings"
  ],
  "author": "Applelo",
  "license": "MT",
  "devDependencies": {
    "sass": "^1.58.0",
    "typescript": "^4.9.5",
    "typescript-plugin-css-modules": "^4.1.1",
    "vite": "^4.1.1",
    "vite-plugin-dts": "^1.7.2"
  }
}